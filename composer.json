{
	"name":			"alex-shul/yii2-optimizer",
	"description":	"Optimization tool for CSS & JS files, created as Yii2 extension",
	"keywords":		["optimization", "alex-shul", "css", "js", "minify", "auto", "yii2", "extension"],
	"type":         "yii2-extension",
	"license": 		"MIT",
	"authors": 		[
		{
			"name": "Alex Shul",
			"email": "work.alex.shul@gmail.com"
		}
	],
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.3.1",
		"yiisoft/yii2": "~2.0.0",
		"tubalmartin/cssmin": "*",
		"matthiasmullie/minify": "*"
	},
	"repositories": [
		{
			"type": "git",
			"url": "https:github.com/alex-shul/yii2-optimizer"
		}
	],
	"autoload": {
		"psr-4": {
			"alexshul\\optimizer\\": "src/"
		}
	},
	"extra": {
        "bootstrap": "alexshul\\optimizer\\Optimizer"
    }
}